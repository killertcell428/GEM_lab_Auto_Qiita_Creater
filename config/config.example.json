{
  "api": {
    "gemini": {
      "model": "gemini-2.5-pro",
      "temperature": 0.7,
      "max_tokens": 200000
    },
    "qiita": {
      "base_url": "https://qiita.com/api/v2",
      "timeout": 30
    },
    "analyzer": {
      "trending_articles": {
        "enabled": true,
        "fetch_interval_days": 7,
        "tags": ["Python", "バイオインフォマティクス", "AI"],
        "limit_per_source": 20
      }
    },
    "feedback": {
      "enabled": true,
      "collect_interval_days": 30,
      "min_likes_for_analysis": 3,
      "min_views_for_analysis": 50
    }
  },
  "article": {
    "default_tags": ["Python", "自動化"],
    "dynamic_tags": true,
    "max_tags": 10,
    "default_private": false,
    "default_tweet": false
  },
  "workflow": {
    "auto_publish": false,
    "require_approval": true,
    "auto_topic_collection": {
      "enabled": true,
      "past_posts_limit": 10,
      "research_period_days": 14
    },
    "schedule": {
      "monday": {
        "enabled": true,
        "article_type": "bioinformatics_research",
        "description": "バイオインフォマティクス研究記事（最新論文・研究手法）"
      },
      "friday": {
        "enabled": true,
        "article_type": "bioinformatics_tips",
        "description": "バイオインフォ解析・開発Tips記事"
      }
    }
  },
  "notifications": {
    "email": {
      "enabled": false,
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "sender_email": "",
      "sender_password": "",
      "recipients": [
        "ueda.bioinfo.base01@gmail.com",
        "killertcell428@gmail.com"
      ]
    }
  }
}

